<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <button t-if="widget.modelName == 'product.template'" type="button" name="button_action_open_product_configurator" icon="fa-cog" class="btn btn-primary oe_product_configurator_button">
                Configurar Producto
            </button>
            <button t-if="widget.modelName == 'product.product'" type="button" name="button_action_open_product_configurator" icon="fa-cog" class="btn btn-primary oe_product_configurator_button">
                Configurar Producto
            </button>
        </t>
    </t>
</templates>