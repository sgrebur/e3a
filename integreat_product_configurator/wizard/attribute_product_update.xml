<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="wizard_product_spect_attribute_fields_update_view" model="ir.ui.view">
        <field name="name">product.attribute.update.wizard</field>
        <field name="model">product.attribute.update.wizard.integreat</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <p><b>Select template (caja or lamina) and press OK</b></p>
                    <p><i>This is a very specific module. Errors can occure. Don't use it as a standard function!</i></p>
                </div>
                <group>
                    <field name="template_id"/>
                </group>
                <footer>
                    <button name="button_process" type="object" string="Process" class="btn-primary"/>
                    <button string="Cancel" type="button" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="wizard_product_spect_attribute_fields_update_action" model="ir.actions.act_window">
        <field name="name">Product SPEC fields update</field>
        <field name="res_model">product.attribute.update.wizard.integreat</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="wizard_product_spect_attribute_fields_update_view"/>
    </record>
    <menuitem
        action="wizard_product_spect_attribute_fields_update_action" id="menu_wizard_product_spect_attribute"
        parent="stock.menu_product_in_config_stock" sequence="4" groups="product.group_product_variant"/>
    </data>
</odoo>
