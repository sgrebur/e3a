<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_plan_check_availability_wizard" model="ir.ui.view">
        <field name="name">mrp.production.plan.wizard</field>
        <field name="model">mrp.production.plan.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>No se ha confirmado la disponibilidad de material de los pedidos de fabricación.<br/>¿Todavía quieres lanzar la producción?</p>
                <footer>
                    <button name="button_continue" type="object" string="Continuar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
