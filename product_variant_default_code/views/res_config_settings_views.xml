<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_variant_code" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.product.variant.code</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='multi_company']" position="after">
                    <h2>Product Variants</h2>
                    <div class="row mt16 o_settings_container" id="product_variant_code">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_default_code" string="Product Default Code behavior"/>
                                <div class="text-muted">
                                    Defines how you want to manage the Variant default code
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="group_product_default_code" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
